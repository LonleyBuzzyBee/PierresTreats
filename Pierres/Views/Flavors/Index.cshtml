@{
  Layout = "_Layout";
}

@using Pierres.Models;
@using System.Security.Claims
@model IEnumerable<Pierres.Models.Flavor>

<div class="box2">
<h1><strong>Flavors</strong></h1>

@if (Model.Any())
{
 
    @foreach (Flavor flavor in Model)
    {
      <h4>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</h4>
    }
  
} 
else
{
  <h3>No flavors available</h3>
}
<p class="home">@Html.ActionLink("Add new flavor", "Create")</p>
</div>


