@{
  Layout = "_Layout";
}
@model Pierres.Models.Flavor
<h3>Add a Treat</h3>

<h4>Add this flavor to a treat: @Html.DisplayFor(model => model.Type)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select a treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>