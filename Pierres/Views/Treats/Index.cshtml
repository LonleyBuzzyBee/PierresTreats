@{
  Layout = "_Layout";
}
@using Pierres.Models;
@model List<Pierres.Models.Treat>;

<div class="box2">
<h2><strong>Treats</strong><h2/>

@if (@Model.Count == 0)
{
  <h3>no treats have been added</h3>
}
@foreach (Treat treat in Model)
{
  <h4>@Html.ActionLink($"{treat.Type}", "Details", new { id = treat.TreatId })</h4>
}

<p class="home">@Html.ActionLink("Add new treat", "Create")</p>
</div>